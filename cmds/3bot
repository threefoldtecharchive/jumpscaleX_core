#! /usr/bin/env python3
from Jumpscale import j
import pprint
import click

# needs to become master !
j.data.bcdb._master_set(True)


@click.group()
def cli():
    pass


HELP = """
threebot tool
"""


@click.command()
def start():
    j.application.interactive = True
    j.servers.threebot.start(background=True)
    print(" - Server started ok")


@click.command()
def stop():
    j.servers.threebot.default.stop()
    print(" - Server stopped ok")


@click.command()
def restart():
    j.servers.threebot.default.stop()
    print(" - Server stopped ok")
    j.servers.threebot.default.start()
    print(" - Server started ok")


@click.command()
def help():
    print(HELP)


cli.add_command(start)
cli.add_command(restart)
cli.add_command(stop)
cli.add_command(help)

if __name__ == "__main__":
    cli()
